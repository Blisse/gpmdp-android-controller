<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controller_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ai.victorl.gpmdpcontroller.ui.controller.ControllerActivity">

    <EditText
        android:id="@+id/controller_ip_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/controller_ip_edittext_hint"/>

    <Button
        android:id="@+id/controller_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/controller_connect_button_text"/>

    <TextView
        android:id="@+id/controller_track_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/controller_track_artist_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.v7.widget.LinearLayoutCompat>
